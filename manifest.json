{
  "manifest_version": 2,
  "name": "YouTube Channel Blocker",
  "version": "1.4.0",
  "description": "特定のチャンネルの動画を非表示にします (Block videos from specific channels.)",
  "permissions": ["storage", "unlimitedStorage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-channel-blocker@yourdomain.dev",
      "strict_min_version": "109.0"
    }
  }
}
